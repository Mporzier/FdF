###############################################################################
### OPTIONS
###############################################################################

NAME = fdf
CC = gcc
CFLAGS = -Wall -Wextra -Werror
INC = -lmlx -framework OpenGL -framework AppKit libft/libft.a

###############################################################################
### COLORS
###############################################################################

COL_BLACK		= \033[1;30m
COL_RED			= \033[1;31m
COL_GREEN		= \033[1;32m
COL_YELLOW		= \033[1;33m
COL_BLUE		= \033[1;34m
COL_PURPLE		= \033[1;35m
COL_WHITE		= \033[1;37m

###############################################################################
### SOURCES
###############################################################################

SRC =	main.c

###############################################################################
### RULES
###############################################################################

OBJ = $(SRC:.c=.o)

.PHONY: all, clean, fclean, re

$(NAME): $(OBJ)
	@$(CC) -o $(NAME) $(OBJ) $(INC)
	@echo "$(COL_GREEN)$(NAME)			created !"

%.o : %.c
	@$(CC) -c $? -o $@
	@echo "$(COL_PURPLE)$@		created !"

all: $(NAME)

clean:
	@$(RM) $(OBJ)
	@echo "$(COL_YELLOW)Objects 		deleted !"

fclean: clean
	@$(RM) $(NAME)
	@echo "$(COL_RED)$(NAME) 		deleted !"

re: fclean all
